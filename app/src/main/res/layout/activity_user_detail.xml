<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sb.hangsearch.UserDetailActivity"
    android:gravity="left|top">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/detail_image_view"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:paddingBottom="8dp"
        />
    <ImageView
        android:id="@+id/verifyImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"/>
    <TextView
        android:id="@+id/name_text"
        android:text="Name: "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        />
    <TextView
        android:id="@+id/username_text"
        android:text="Username: "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        />
    <TextView
        android:id="@+id/broadcast_count"
        android:text="Broadcast Count: "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        />
    <TextView
        android:id="@+id/broadcasting"
        android:text="Broadcasting: "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        />
    <TextView
        android:id="@+id/follower_count"
        android:text="Follower Count: "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        />
    <TextView
        android:id="@+id/follwing_count"
        android:text="Following Count: "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
